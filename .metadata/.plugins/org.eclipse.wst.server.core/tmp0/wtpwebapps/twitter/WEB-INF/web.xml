<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	<display-name>Twitterium</display-name> 
	
	<servlet> 
		<servlet-name>createUser</servlet-name> 
		<servlet-class>servlet.user.CreateUser</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>login</servlet-name> 
		<servlet-class>servlet.user.Login</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>logout</servlet-name> 
		<servlet-class>servlet.user.Logout</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>addFriend</servlet-name> 
		<servlet-class>servlet.friends.AddFriend</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>removeFriend</servlet-name> 
		<servlet-class>servlet.friends.RemoveFriend</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>search</servlet-name> 
		<servlet-class>servlet.friends.Search</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>message</servlet-name> 
		<servlet-class>servlet.message.CreateMessage</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>listMessage</servlet-name> 
		<servlet-class>servlet.message.ListMessages</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>listAllMessage</servlet-name> 
		<servlet-class>servlet.message.ListAllMessages</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>listFriends</servlet-name> 
		<servlet-class>servlet.friends.ListFriends</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>listMessagesFriends</servlet-name> 
		<servlet-class>servlet.message.ListMessagesFriends</servlet-class> 
	</servlet>
	<servlet>
		<servlet-name>addCom</servlet-name>
		<servlet-class>servlet.message.AddCom</servlet-class> 
	</servlet>
	<servlet>
		<servlet-name>deleteMessage</servlet-name>
		<servlet-class>servlet.message.DeleteMessage</servlet-class> 
	</servlet>
	<servlet>
		<servlet-name>deleteComment</servlet-name>
		<servlet-class>servlet.message.DeleteComment</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>userInfo</servlet-name> 
		<servlet-class>servlet.user.UserInfo</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>picturePath</servlet-name> 
		<servlet-class>servlet.user.PicturePath</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>searchMessage</servlet-name> 
		<servlet-class>servlet.message.Search</servlet-class> 
	</servlet>
	
	
	

	<servlet-mapping> 
		<servlet-name>createUser</servlet-name> 
		<url-pattern>/user/create</url-pattern> 
	</servlet-mapping>	
	<servlet-mapping> 
		<servlet-name>login</servlet-name> 
		<url-pattern>/user/login</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>logout</servlet-name> 
		<url-pattern>/user/logout</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>addFriend</servlet-name> 
		<url-pattern>/friends/add</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>removeFriend</servlet-name> 
		<url-pattern>/friends/remove</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>search</servlet-name> 
		<url-pattern>/friends/search</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>message</servlet-name> 
		<url-pattern>/message/create</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>listMessage</servlet-name> 
		<url-pattern>/message/list</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>listAllMessage</servlet-name> 
		<url-pattern>/message/listall</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>listFriends</servlet-name> 
		<url-pattern>/friends/listfriends</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>listMessagesFriends</servlet-name> 
		<url-pattern>/message/listmfriends</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>addCom</servlet-name> 
		<url-pattern>/message/addcom</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>deleteMessage</servlet-name> 
		<url-pattern>/message/deletem</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>deleteComment</servlet-name> 
		<url-pattern>/message/deletec</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>userInfo</servlet-name> 
		<url-pattern>/user/info</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>picturePath</servlet-name> 
		<url-pattern>/user/picture</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>searchMessage</servlet-name> 
		<url-pattern>/message/search</url-pattern> 
	</servlet-mapping>
	


	<resource-ref>
		<description>DBConnection</description>
		<res-ref-name>jdbc/db</res-ref-name>
		<res-type>java.sql.Database</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>